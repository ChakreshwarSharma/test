<p id="notice"><%= notice %></p>

<h1>Secret Codes</h1>
<%= form_tag secret_codes_path, method: :get do %>
  <%= select_tag :per_page, options_for_select([1, 10, 20, 50, 100], selected: params[:per_page] || 10) %>
  <%= submit_tag 'Submit' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @secret_codes.each do |secret_code| %>
      <tr>
        <td><%= secret_code.user.present? ? secret_code.user.email : '' %></td>
        <td><%= secret_code.code %></td>
        <td><%= link_to 'Show', secret_code %></td>
        <td><%= link_to 'Edit', edit_secret_code_path(secret_code) %></td>
        <td><%= link_to 'Destroy', secret_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @secret_codes %>
<br>

<%= link_to 'New Secret Code', new_secret_code_path %>
